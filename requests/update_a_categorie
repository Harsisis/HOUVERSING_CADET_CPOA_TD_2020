//num_cat is a variable we use, it was filled by the user
//title_cat is a variable used to stare the name if the user want to change it
//visual_cat is a variable used to stare the visual if the user want to change it
int num_cat = 0;
String title_cat;
String visual_cat;

// I create a string to store the query
String query = "UPDATE Categorie SET";
  
  //if the title wasn't empty, the user want to change it 
  if (title_cat <> "")
    query += "titre = '" + title_cat + "'";
  
  //if the visual wasn't empty, the user want to change it
  if (visual_cat <> "")
    query += "visuel = '" + visual_cat + "'";
    
    
//we only change the title and/or the visual for the selected cat
query += "WHERE id_categorie = " + num_cat + ";"












PreparedStatement requete =
  laConnexion.prepareStatement("delete from
  etudiant where promo_etudiant=?");
requete.setInt(1, idPromo);

nbLignes = requete.executeUpdate();

